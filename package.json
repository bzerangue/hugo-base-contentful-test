{
	"name": "hugo-base",
	"version": "1.0.0",
	"description": "Starter files for a Hugo project",
	"main": "index.js",
	"repository": "https://github.com/theNewDynamic/hugo-starter.git",
	"author": "budparr <budparr@gmail.com>",
	"license": "MIT",
	"scripts": {
		"version:major": "npm version major -m 'Breaking Release'",
		"version:minor": "npm version minor -m 'Feature Release'",
		"version:patch": "npm version patch -m 'bump version for fixes minor changes'",
		"build": "webpack --config webpack.prod.js --env=production",
		"buildd": "webpack --config webpack.dev.js --env=development --progress --colors --watch",
		"start": "yarn buildd"
	},
	"devDependencies": {
		"assets-webpack-plugin": "^3.5.1",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.6.1",
		"clean-webpack-plugin": "^0.1.19",
		"css-loader": "^0.28.11",
		"cssnano": "^3.10.0",
		"dotenv": "^5.0.1",
		"file-loader": "^1.1.6",
		"glob-all": "^3.1.0",
		"lazysizes": "^4.0.2",
		"mini-css-extract-plugin": "^0.4.0",
		"postcss": "^6.0.21",
		"postcss-import": "^11.0.0",
		"postcss-loader": "^2.1.3",
		"purgecss-webpack-plugin": "^0.22.0",
		"style-loader": "^0.20.3",
		"tailwindcss": "^0.5.2",
		"webpack": "^4.5.0",
		"webpack-cli": "^2.0.14",
		"webpack-merge": "^4.1.1"
	}
}
